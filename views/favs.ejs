<%- include('partials/header') %>


<div class="jumbotron text-center">
  <div class="container-fluid">
      <div class="row justify-content-md-center">
        <div class="col col-lg-2">
          <a class="btn text-dark" href="/favs">My Favs</a>
        </div>
        <div class="col-md-auto">
          <a class="btn text-dark" aria-disabled="true" href="/shuffle">Shuffle</a>
        </div>
        <div class="col col-lg-2">
          <a class="btn text-dark" href="/me/posts">My Secrets</a>
        </div>
      </div>
    </div>

    <br>
    <br>

    <!-- Add code here -->
    <div class="row">
        <% if(favs) { %>
            <% favs.forEach((fav)=>{ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                  <div class="card">
                    <div class="card-header">
                        <a class="btn text-danger" href="/user/<%=fav%>">User: <%=fav%></a>
                    </div>
                  </div>
                </div>
            <% }) %>
        <% } %>
      </div>
    <hr>

    <a class="btn btn-light btn-md" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-md" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

